<% layout("/layouts/boilerplate") -%>
<body>
    <div class="rows">
        <div class="col-8 offset-2">
            <h3>Create New Listing Here:</h3>
            <form action="/listings" method="post" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <input name="listing[title]" type="text" placeholder="Enter Title" class="form-control" required>
                    <div class="valid-feedback">Title looks good!</div>
                    <div class="invalid-feedback">Title can not be Empty!</div>
                </div>
            
                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <textarea name="listing[description]" rows="3" cols="25" name="" id="" placeholder="Enter Description" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please enter a short description!</div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Image/URL:</label>
                    <input name="listing[image]" type="text" placeholder="Enter Image/Url" class="form-control">
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price:</label>
                        <input name="listing[price]" type="text" placeholder="Enter Price" class="form-control" required>
                        <div class="invalid-feedback">Enter valid Price!</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country:</label>
                        <input name="listing[country]" type="text" placeholder="Enter Country" class="form-control" required>
                        <div class="invalid-feedback">Enter valid Country Name!</div>
                    </div>
                </div>
            
                <div class="mb-3">
                    <label for="location" class="form-label">Location:</label>
                    <input name="listing[location]" type="text" placeholder="Enter Location" class="form-control" required>
                    <div class="invalid-feedback">Enter valid Location!</div>
                </div>

                <div class="mb-3">
                    <label for="validationCustom04" class="form-label">Category</label>
                    <select class="form-select" id="validationCustom04" name="listing[category]" required>
                      <option selected disabled value="">Select a category</option>
                      <option value="Rooms">Rooms</option>
                      <option value="trending">trending</option>
                      <option value="Mountains">Mountains</option>
                      <option value="Mansion">Mansion</option>
                      <option value="Amazing pools">Amazing pools</option>
                      <option value="Camping">Camping</option>
                      <option value="Farms">Farms</option>
                      <option value="Snow">Snow</option>
                      <option value="Cities">Cities</option>
                      
                    </select>
                    <div class="invalid-feedback">
                      Please select a valid category.
                    </div>
                  </div>

                <button class="btn btn-danger">Add Listing</button>

            </form>
            <br>
        </div>
    </div>
</body>
